---
import SocialLinks from './ui/SocialLinks.astro';
import NavLinks from './ui/NavLinks.astro';

const today = new Date();
---

<footer>
  <div class="footer-content">
    <div class="footer-section">
      <h3>TrendingNews</h3>
      <p>Your source for the latest news and updates.</p>
    </div>
    <div class="footer-section">
      <h4>Quick Links</h4>
      <NavLinks />
    </div>
    <div class="footer-section">
      <h4>Follow Us</h4>
      <SocialLinks />
    </div>
  </div>
  <div class="footer-bottom">
    <p>&copy; {today.getFullYear()} TrendingNews. All rights reserved.</p>
  </div>
</footer>

<style>
  footer {
    background: #f8f9fa;
    padding: 3rem 0 1rem;
    margin-top: 4rem;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .footer-section h3, .footer-section h4 {
    margin: 0 0 1rem 0;
  }

  .footer-bottom {
    text-align: center;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #eee;
  }
</style>